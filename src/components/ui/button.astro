---
import { twMerge } from 'tailwind-merge';
import type { CallToAction as Props } from '~/types';

export interface Props {
	text?: string;
	class?: string;
	type?: string;
	href?: string;
	target?: string;
	[key: string]: any;
}

const {
	text = Astro.slots.render('default'),
	class: className = '',
	type,
	href,
	target,
	...rest
} = Astro.props;

const base = twMerge('btn', className);
---

{text && (

	type === 'submit' ? (
		<button type="submit" class={base} {...rest}>
			{text}
		</button>
	) : href ? (
		<a
			href={href}
			class={base}
			target={target}
			rel={target === '_blank' ? 'noopener noreferrer' : undefined}
			{...rest}
		>
			{text}
		</a>
	) : (
		<button type="button" class={base} {...rest}>
			{text}
		</button>
	)

)}
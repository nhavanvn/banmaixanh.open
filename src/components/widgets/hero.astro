---
import CommonImage from '~/components/common/image.astro';
import type { CallToAction } from '~/types';
import Button from '~/components/ui/button.astro';

export interface Props {
	title?: string;
	subtitle?: string;
	tagline?: string;
	content?: string;
	actions?: string | CallToAction[];
	image?: string | { src: string; alt?: string; title?: string };
	headingLevel?: 'h1' | 'h2';
}

const {
	title = await Astro.slots.render('title'),
	subtitle = await Astro.slots.render('subtitle'),
	tagline,
	content = await Astro.slots.render('content'),
	actions = await Astro.slots.render('actions'),
	image,
	headingLevel = 'h1',
} = Astro.props;

const imageProps = typeof image === 'string' ? { src: image, alt: 'Diễn đàn viết lách nhà văn tương lai.', title: 'Diễn đàn viết lách nhà văn tương lai.' } : image;
---

<section class="relative w-full h-screen not-prose">
	<div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
	<div class="relative max-w-7xl mx-auto px-4 sm:px-6">

		<div class="pt-0 md:pt-[120px] pointer-events-none"></div>
		<div class="py-12 md:py-20 grid gap-6 md:grid-cols-2 max-w-full">

			<div class="pb-10 md:pb-16 mx-auto lg:mx-0 w-full">

				{tagline && (
					<p class="text-base text-secondary font-bold tracking-wide uppercase text-left" set:html={tagline} />
				)}

				{title && (
					<Fragment>
						{headingLevel === 'h1' ? (
							<h1 set:html={title} />
						) : (
							<h2 set:html={title} />
						)}
					</Fragment>
				)}

				<div class="w-full max-w-3xl mx-auto">
					{subtitle && (
						<p set:html={subtitle} />
					)}
					{actions && (
						<div class="max-w-xs sm:max-w-md flex flex-col sm:flex-row gap-4">
							{Array.isArray(actions) ? (
								actions.map((action, index) => (
									<div key={index} class="flex w-full sm:w-auto">
										<Button {...(action || {})} class="w-full sm:mb-0" target="_blank" />
									</div>
								))
							) : (
								<Fragment set:html={actions} />
							)}
						</div>
					)}
					{content && <Fragment set:html={content} />}
				</div>

			</div>

			{image && (
				<div class="pb-10 md:pb-16 mx-auto lg:mx-0 w-full">
					<div class="relative m-auto max-w-5xl">
						<CommonImage
							src={imageProps.src}
							alt={imageProps.alt}
							title={imageProps.title}
						/>
					</div>
				</div>
			)}

		</div>
	</div>
</section>
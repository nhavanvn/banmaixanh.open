---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogTagRobots, getStaticPathsBlogTag } from '~/utils/blog';

import Layout from '~/layouts/page.astro';
import Hero from '~/components/widgets/hero.astro';

import Articlelist from '~/components/article/articlelist.astro';
import Pagination from '~/components/article/pagination.astro';

import Form from '~/components/content/form.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) =>{
	return await getStaticPathsBlogTag({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page, tag } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;

const metadata = {
	title: `Danh sách theo thẻ ${tag}${currentPage >1 ? ` | Trang ${currentPage} ` : ''}`,
	description: `Bài viết theo thẻ ${tag}${currentPage >1 ? ` | Trang ${currentPage} ` : ''} được phân loại trên website, giúp người đọc nhanh chóng, dễ dàng tìm thấy thông tin mình cần.`,
	robots: {
		index: blogTagRobots?.index,
		follow: blogTagRobots?.follow,
	},
};
---

<Layout metadata={metadata}>

	<Hero

		title={metadata.title}
		subtitle={metadata.description}
		image="https://image.nhavantuonglai.com/image/cover/001-729.jpg"
		alt="Diễn đàn viết lách nhà văn tương lai."

	/>

	<section class="relative max-w-7xl mx-auto px-4 sm:px-6">

		<h2>Thẻ bài viết {tag}, trang số {currentPage}:<h2/>

		<Articlelist posts={page.data}/>

		<Pagination prevUrl={page.url.prev} nextUrl={page.url.next}/>

	</section>

	<Form/>

</Layout>